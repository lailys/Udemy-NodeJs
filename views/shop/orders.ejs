<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <% if (orders.length <= 0) { %>
      <h1>Nothing there!</h1>
  <% } else { %>
      <ul>
          <% orders.map((order,index) => { %>
              <li>
                  <h1><%= index%></h1>
                  <ul>
                      <% order.items.map(product => { %>
                          <li><%= product.title %> (<%= product.quantity %>)</li>
                      <% }); %>
                  </ul>
              </li>
          <% }); %>
      </ul>
  <% } %>
  </main>
  <%- include('../includes/end.ejs') %>
